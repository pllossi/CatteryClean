<Window x:Class="GattileUI.EditCatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifica Gatto" Height="420" Width="500">
    <Grid Margin="10">
        <Menu x:Name="MenuPrincipale" Width="Auto" Height="45" VerticalAlignment="Top">
            <MenuItem Header="Gatti" FontSize="20" Height="45">
                <MenuItem FontSize="15" Header="Visualizza Gatti" Click="MenuPrincipale_ViewCats_Click"/>
                <MenuItem FontSize="15" Header="Aggiungi Gatto" Click="MenuPrincipale_AddCat_Click"/>
            </MenuItem>
            <MenuItem Header="Adottanti" FontSize="20">
                <MenuItem FontSize="15" Header="Visualizza Adottanti" Click="MenuPrincipale_ViewAdopters_Click"/>
                <MenuItem FontSize="15" Header="Aggiungi Adottante" Click="MenuPrincipale_AddAdopter_Click"/>
            </MenuItem>
            <MenuItem Header="Adozioni" FontSize="20">
                <MenuItem FontSize="15" Header="Visualizza Adozioni" Click="MenuPrincipale_ViewAdoptions_Click"/>
                <MenuItem FontSize="15" Header="Nuova Adozione" Click="MenuPrincipale_NewAdoption_Click"/>
            </MenuItem>
        </Menu>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,50,0,10">
            <TextBlock Text="Modifica Gatto" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBlock Text="Nome:" Margin="0,0,0,8"/>
                <TextBlock Text="Razza:" Margin="0,0,0,8"/>
                <TextBlock Text="Sesso (Maschio):" Margin="0,0,0,8"/>
                <TextBlock Text="Data nascita:" Margin="0,0,0,8"/>
                <TextBlock Text="Data arrivo:" Margin="0,0,0,8"/>
                <TextBlock Text="Data uscita:" Margin="0,0,0,8"/>
                <TextBlock Text="Codice ID:" Margin="0,0,0,8"/>
                <TextBlock Text="Descrizione:" Margin="0,0,0,8"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBox x:Name="txtName" Margin="0,0,0,6"/>
                <TextBox x:Name="txtBreed" Margin="0,0,0,6"/>
                <CheckBox x:Name="chkIsMale" Content="Maschio" Margin="0,0,0,6"/>
                <DatePicker x:Name="dpBirth" Margin="0,0,0,6"/>
                <DatePicker x:Name="dpArrival" Margin="0,0,0,6"/>
                <DatePicker x:Name="dpExit" Margin="0,0,0,6"/>
                <TextBox x:Name="txtCodeId" Margin="0,0,0,6"/>
                <TextBox x:Name="txtDescription" Height="67" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Annulla" Width="90" Click="BtnCancel_Click"/>
            <Button Content="Salva" Width="90" Click="BtnSave_Click" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
