<Window x:Class="GattileUI.NewCatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Cat" Height="240" Width="400">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Menu x:Name="MenuPrincipale" Width="Auto" Height="Auto" VerticalAlignment="Top">
                <MenuItem Header="Gatti" FontSize="15" Height="Auto">
                    <MenuItem FontSize="15" Header="Visualizza Gatti" Click="MenuPrincipale_ViewCats_Click"/>
                    <MenuItem FontSize="15" Header="Aggiungi Gatto" Click="MenuPrincipale_AddCat_Click"/>
                </MenuItem>
                <MenuItem Header="Adottanti" FontSize="15">
                    <MenuItem FontSize="15" Header="Visualizza Adottanti" Click="MenuPrincipale_ViewAdopters_Click"/>
                    <MenuItem FontSize="15" Header="Aggiungi Adottante" Click="MenuPrincipale_AddAdopter_Click"/>
                </MenuItem>
                <MenuItem Header="Adozioni" FontSize="15">
                    <MenuItem FontSize="15" Header="Visualizza Adozioni" Click="MenuPrincipale_ViewAdoptions_Click"/>
                    <MenuItem FontSize="15" Header="Nuova Adozione" Click="MenuPrincipale_NewAdoption_Click"/>
                </MenuItem>
            </Menu>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Name:" Width="80"/>
            <TextBox x:Name="txtName" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Label Content="Breed:" Width="80"/>
            <TextBox x:Name="txtBreed" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Label Content="Male:" Width="80"/>
            <CheckBox x:Name="chkMale" IsChecked="True"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <Label Content="Description:" Width="80"/>
            <TextBox x:Name="txtDescription" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5">
            <Label Content="Birth Date:" Width="93"/>
            <DatePicker x:Name="dpBirthDate" Width="184"/>
        </StackPanel>
        <Button Content="Save" Grid.Row="7" Width="108" Margin="0,8,0,10" HorizontalAlignment="Left" Click="btnSave_Click"/>
    </Grid>
</Window>
