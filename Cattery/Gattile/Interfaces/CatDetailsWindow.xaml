<Window x:Class="GattileUI.CatDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dettagli Gatto" Height="280" Width="380" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="MenuPrincipale" Grid.Row="0" VerticalAlignment="Top" Height="45">
            <MenuItem Header="Gatti" FontSize="16" Height="45">
                <MenuItem FontSize="14" Header="Visualizza Gatti" Click="MenuPrincipale_ViewCats_Click"/>
                <MenuItem FontSize="14" Header="Aggiungi Gatto" Click="MenuPrincipale_AddCat_Click"/>
            </MenuItem>
            <MenuItem Header="Adottanti" FontSize="16" Height="45">
                <MenuItem FontSize="14" Header="Visualizza Adottanti" Click="MenuPrincipale_ViewAdopters_Click"/>
                <MenuItem FontSize="14" Header="Aggiungi Adottante" Click="MenuPrincipale_AddAdopter_Click"/>
            </MenuItem>
            <MenuItem Header="Adozioni" FontSize="16" Height="45">
                <MenuItem FontSize="14" Header="Visualizza Adozioni" Click="MenuPrincipale_ViewAdoptions_Click"/>
                <MenuItem FontSize="14" Header="Nuova Adozione" Click="MenuPrincipale_NewAdoption_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Margin="8,12,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Nome:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock Text="{Binding Nome}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="4,4,0,4"/>

            <TextBlock Text="Razza:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock Text="{Binding Razza}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="4,4,0,4"/>

            <TextBlock Text="Sesso:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock Text="{Binding Sesso}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="4,4,0,4"/>

            <TextBlock Text="Data di nascita:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock Text="{Binding DataNascita, StringFormat={}{0:dd/MM/yyyy}}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="4,4,0,4"/>

            <TextBlock Text="Descrizione:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Top" Margin="0,4"/>
            <TextBlock Text="{Binding Descrizione}" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Margin="4,4,0,4"/>

            <TextBlock Text="Codice identificativo:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock Text="{Binding CodiceIdentificativo}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="4,4,0,4"/>

            <Button Content="Chiudi" Grid.Row="6" Grid.Column="1" Width="120" HorizontalAlignment="Center" Margin="0,10,0,0" Click="BtnChiudi_Click"/>
        </Grid>
    </Grid>
</Window>
