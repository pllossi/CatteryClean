<Window x:Class="GattileUI.ViewAdoptersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Elenco Adottanti" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Titolo -->
            <RowDefinition Height="*"/>    <!-- Lista -->
            <RowDefinition Height="Auto"/> <!-- Bottoni -->
        </Grid.RowDefinitions>

        <!-- Menu condiviso -->
        <Menu x:Name="MenuPrincipale" Grid.Row="0" VerticalAlignment="Top" Height="42">
            <MenuItem Header="Gatti" FontSize="16" Height="42">
                <MenuItem FontSize="14" Header="Visualizza Gatti" Click="MenuPrincipale_ViewCats_Click"/>
                <MenuItem FontSize="14" Header="Aggiungi Gatto" Click="MenuPrincipale_AddCat_Click"/>
            </MenuItem>
            <MenuItem Header="Adottanti" FontSize="16" Height="42">
                <MenuItem FontSize="14" Header="Visualizza Adottanti" Click="MenuPrincipale_ViewAdopters_Click"/>
                <MenuItem FontSize="14" Header="Aggiungi Adottante" Click="MenuPrincipale_AddAdopter_Click"/>
            </MenuItem>
            <MenuItem Header="Adozioni" FontSize="16" Height="42">
                <MenuItem FontSize="14" Header="Visualizza Adozioni" Click="MenuPrincipale_ViewAdoptions_Click"/>
                <MenuItem FontSize="14" Header="Nuova Adozione" Click="MenuPrincipale_NewAdoption_Click"/>
            </MenuItem>
        </Menu>

        <TextBlock Text="Elenco Adottanti" FontSize="18" FontWeight="Bold" Margin="4" Grid.Row="1"/>

        <Grid Grid.Row="2" Margin="0,8,0,8">
            <Grid.Resources>
                <DataTemplate x:Key="AdopterItemTemplate" DataType="{x:Type sys:Object}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Surname}" />
                        <TextBlock Text="  " />
                        <TextBlock Text="{Binding TaxId.TaxId}" Foreground="Gray" FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </Grid.Resources>

            <ListBox x:Name="lstAdopters"
                     ItemTemplate="{StaticResource AdopterItemTemplate}"
                     HorizontalContentAlignment="Stretch"
                     BorderThickness="1"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Dettagli" Width="100" Click="BtnDetails_Click"/>
            <Button Content="Nuovo" Width="100" Margin="8,0,0,0" Click="BtnNew_Click"/>
            <Button Content="Chiudi" Width="100" Margin="8,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
